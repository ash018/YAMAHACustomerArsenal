<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aci.yamaha.yamahacustomerarsenal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.NavActivity"
            android:label="@string/title_activity_nav"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.YCAApp"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.InquiryActivity"
            android:label="@string/title_activity_inquiry"
            android:parentActivityName=".activity.NavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aci.yamaha.yamahacustomerarsenal.activity.NavActivity" />
        </activity>
        <activity
            android:name=".activity.ComplainActivity"
            android:label="@string/title_activity_complain"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ServiceActivity"
            android:label="@string/title_activity_service"
            android:parentActivityName=".activity.NavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aci.yamaha.yamahacustomerarsenal.activity.NavActivity" />
        </activity>
        <activity
            android:name=".activity.ServiceStatusActivity"
            android:label="@string/title_activity_service_stats"
            android:parentActivityName=".activity.NavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aci.yamaha.yamahacustomerarsenal.activity.NavActivity" />
        </activity>
        <activity
            android:name=".activity.DispalyServiceActivity"
            android:label="@string/title_activity_dispaly_service"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ContactActivity"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.InquiryViewActivity"
            android:label="@string/title_activity_inquiry_inbox"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".activity.ComplainViewActivity"
            android:label="@string/title_activity_complain_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>