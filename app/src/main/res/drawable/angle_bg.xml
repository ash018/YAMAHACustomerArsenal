<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape
        android:shape="rectangle">

        <solid android:color="#DDDDDD" />
        <corners android:radius="5dp" />

        <!-- Padding -->
        <padding
            android:bottom="0dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp"></padding>
        <corners android:radius="5dp"></corners>

    </shape>
</item>
<item
    android:bottom="1dp"
    android:left="1dp"
    android:right="1dp"
    android:top="1dp">
    <shape
        android:shape="rectangle">

        <solid android:color="#FFFFFF" />
        <corners android:radius="5dp" />

        <!-- Padding -->
        <padding
            android:bottom="10dp"
            android:left="10dp"
            android:right="10dp"
            android:top="10dp"></padding>
        <corners android:radius="5dp"></corners>

    </shape>
</item>

</layer-list>